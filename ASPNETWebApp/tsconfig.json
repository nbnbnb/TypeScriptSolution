{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [ "es6-shim", "knockout", "systemjs" ] // 指定 typing 文件，通过 npm install --save @types/knockout 进行安装
  },
  "include": [ "Scripts/apps/**/*", "Scripts/config/**/*" ],
  "compileOnSave": true
}